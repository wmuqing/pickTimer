<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="date_picker_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">1px</item>-->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_light_black</item>
        <item name="android:paddingBottom">@dimen/distance_big</item>
        <item name="android:paddingTop">@dimen/distance_big</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_date_picker_btn</item>
        <item name="android:layout_marginLeft">@dimen/distance_little</item>
        <item name="android:layout_marginRight">@dimen/distance_little</item>
    </style>
</resources>
